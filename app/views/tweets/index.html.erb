<p id="notice"><%= notice %></p>

<h1 class= "text-center">Listing All Tweets</h1>
<div class= "row">
</div>



 <table>
  <thead>
    <tr>
      <th>Tweets</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
    <br></br>
  </thead>

  <tbody>
    <% @tweet.each do |tweet| %>
      <tr>
        <td><%= tweet.note %></td>
        <td><%= link_to  tweet.user.email, user_path(tweet.user_id) %></td>
        <% if current_user && current_user.id == tweet.user_id %>
           <td><%= link_to 'delete', delete_tweet_path(tweet.id), method: :delete %></td>
         <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
